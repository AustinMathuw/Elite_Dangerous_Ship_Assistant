<Page
    x:Class="PubnubWindowsStore.PubnubOperation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PubnubWindowsStore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="19,-8,0,8">
            <TextBlock Style="{ThemeResource TitleTextBlockStyle}" Margin="0,12,0,0" Text="Elite Dangerous + Alexa Feed"/>
        </StackPanel>

        <!--TODO: Content should be placed within the following grid-->
        <Grid x:ConnectionId='1' Grid.Row="1" x:Name="ContentRoot" Margin="19,4,19,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="63*"/>
                <ColumnDefinition Width="19*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="173*"/>
                <ColumnDefinition Width="43*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:ConnectionId='4' HorizontalAlignment="Left" Margin="1.333,311,-38,0" TextWrapping="Wrap" Name="txtResult" Text="" VerticalAlignment="Top" Width="350" Height="229" IsReadOnly="True"                                       IsHoldingEnabled="False" IsRightTapEnabled="False" Grid.ColumnSpan="5" Grid.Column="2"/>
            <TextBox x:ConnectionId='5' HorizontalAlignment="Left" Margin="0.333,30,-37,0" TextWrapping="Wrap" x:Name="txtResult_Copy" Text="" VerticalAlignment="Top" Width="350" Height="230" IsReadOnly="True"                                       IsHoldingEnabled="False" IsRightTapEnabled="False" Grid.ColumnSpan="5" Grid.Column="2"/>
            <TextBlock Style="{ThemeResource TitleTextBlockStyle}" Margin="1,-7,-29,559" Text="Publish Feed" Grid.ColumnSpan="5" Grid.Column="2"/>
            <TextBlock x:ConnectionId='6' Style="{ThemeResource TitleTextBlockStyle}" Margin="1,274,-29,278" Text="Subscribe Feed" Grid.ColumnSpan="5" Grid.Column="2"                                              />
            
            
            

            <!--<ScrollViewer Height="210" HorizontalAlignment="Stretch" Margin="23.5,472,23.5,0" Name="scrollViewerResult" VerticalAlignment="Top" Width="420" Background="#FFCCC6C6" BorderThickness="2" Foreground="#FF0D0D0D" ManipulationMode="Control" UseLayoutRounding="False" BorderBrush="SteelBlue" VerticalScrollBarVisibility="Visible" DoubleTap="scrollViewerResult_DoubleTap">
                <StackPanel Name="messageStackPanel" Orientation="Vertical"></StackPanel>
            </ScrollViewer>-->

        </Grid>
        <Grid x:ConnectionId='2' Grid.Row="2" x:Name="fotter" Margin="19,4,19,8">
            <Button x:ConnectionId='3' Content="Back" HorizontalAlignment="Left" Margin="10,552,0,0" VerticalAlignment="Top"                      />
        </Grid>
    </Grid>
</Page>

